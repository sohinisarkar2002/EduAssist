# Database (Get from Neon: https://neon.tech)
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# Gemini API (Get from: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro
GEMINI_EMBEDDING_MODEL=models/embedding-001

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=eduassist_documents

# RAG Settings
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5
RAG_CONFIDENCE_THRESHOLD=0.6

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,text/plain

# Auth (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_replace_with_generated
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# App
APP_NAME=EduAssist API
APP_VERSION=1.0.0
DEBUG=True

SENDGRID_API_KEY=your_sendgrid_key
EMAIL_SENDER=your_verified_sender@example.com
FRONTEND_URL=https://your-frontend.com
